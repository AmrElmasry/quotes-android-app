<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favorite_category_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:layout_margin="15dp"

    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="#D5DEFF"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favorite_quote_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="7dp"
            android:text="المفضلة"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/favorite_quote_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:paddingBottom="10dp"
            android:text="بنفسي فتى سهل الخلائق طيب يمازح دهرا عابسا لا يمازح. ويكثر قول الشعر في الحرب لا الهوى لأن الهوى لو قيس بالحرب جارح"
            android:textSize="15sp" />



    </LinearLayout>


</android.support.v7.widget.CardView>